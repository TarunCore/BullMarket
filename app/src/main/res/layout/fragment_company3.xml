<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="480dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Company3">
    <!--55dp marginTop for 2nd linear layout from now-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="480dp"
        android:orientation="vertical"
        android:background="#D6D6D6">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="55dp"
            android:layout_gravity="center_horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#D6D6D6">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="4dp">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginLeft="3dp">

                            <TextView
                                android:id="@+id/companyName3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Targets"


                                android:textColor="#202020"
                                android:textSize="26sp" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/targetDate"
                                android:text="07/07/2021"
                                android:textSize="14sp"
                                android:paddingRight="148dp"
                                android:drawablePadding="2dp"
                                android:layout_marginTop="2dp"
                                android:drawableStart="@drawable/ic_calendar_grey"
                                android:textColor="#676767"/>
                        </LinearLayout>

                        <ImageView
                            android:layout_width="67dp"
                            android:layout_height="58dp"
                            android:src="@drawable/icon_tmp2"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:orientation="horizontal"
                        android:layout_marginLeft="9dp"
                        android:layout_marginRight="9dp"
                        android:layout_marginBottom="2dp"
                        android:layout_marginTop="4dp"
                        android:gravity="center_horizontal">
                        <androidx.cardview.widget.CardView
                            android:layout_width="152dp"
                            android:layout_height="138dp"
                            app:cardCornerRadius="8dp"
                            android:layout_marginRight="10dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:background="@drawable/gradientdarkblue">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginRight="20dp"
                                    android:layout_marginLeft="19dp"
                                    android:layout_marginTop="10dp">


                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:orientation="vertical"
                                        android:layout_height="wrap_content">
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Target 1"
                                            android:textSize="24sp"

                                            android:textColor="@color/white"/>

                                        <TextView
                                            android:id="@+id/C3target1TXT"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:paddingStart="3dp"
                                            android:text="-"

                                            android:textColor="@color/white"
                                            android:textSize="17sp" />
                                    </LinearLayout>



                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginRight="20dp"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginTop="10dp"
                                    android:orientation="vertical"
                                    android:visibility="visible">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/date1"
                                        android:text="07/07/2021"
                                        android:textSize="14sp"
                                        android:drawablePadding="2dp"
                                        android:drawableStart="@drawable/ic_calendar"
                                        android:textColor="@color/white"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/time1"
                                        android:text="10:24 AM"
                                        android:textSize="14sp"
                                        android:drawablePadding="2dp"
                                        android:drawableStart="@drawable/ic_time"
                                        android:layout_marginTop="3dp"
                                        android:textColor="@color/white"/>

                                </LinearLayout>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="152dp"
                            android:layout_height="138dp"
                            app:cardCornerRadius="8dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/gradientorange"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="19dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginRight="20dp"
                                    android:orientation="horizontal">


                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Target 2"
                                            android:textColor="@color/white"

                                            android:textSize="24sp" />

                                        <TextView
                                            android:id="@+id/C3target2TXT"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:paddingStart="3dp"
                                            android:text="-"
                                            android:textColor="@color/white"

                                            android:textSize="17sp" />
                                    </LinearLayout>


                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginRight="20dp"
                                    android:orientation="vertical"
                                    android:visibility="visible">

                                    <TextView
                                        android:id="@+id/date2"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:drawableStart="@drawable/ic_calendar"
                                        android:drawablePadding="2dp"
                                        android:text="07/07/2021"
                                        android:textColor="@color/white"
                                        android:textSize="14sp" />

                                    <TextView
                                        android:id="@+id/time2"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="3dp"
                                        android:drawableStart="@drawable/ic_time"
                                        android:drawablePadding="2dp"
                                        android:text="10:24 AM"
                                        android:textColor="@color/white"
                                        android:textSize="14sp" />


                                </LinearLayout>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_horizontal">
                            <androidx.cardview.widget.CardView
                                android:layout_width="160dp"
                                android:layout_height="140dp"
                                app:cardCornerRadius="8dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical"
                                    android:background="@drawable/gradientblue">
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:layout_marginRight="20dp"
                                        android:layout_marginLeft="20dp"
                                        android:layout_marginTop="10dp">


                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:orientation="vertical"
                                            android:layout_height="wrap_content">
                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="Stop Loss"
                                                android:textSize="24sp"

                                                android:textColor="@color/white"/>

                                            <TextView
                                                android:id="@+id/C3stopLossTXT"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="-"

                                                android:textColor="@color/white"
                                                android:textSize="17sp" />
                                        </LinearLayout>



                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginRight="20dp"
                                        android:layout_marginLeft="20dp"
                                        android:layout_marginTop="10dp"
                                        android:orientation="vertical"
                                        android:visibility="visible">
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:id="@+id/date3"
                                            android:text="07/07/2021"
                                            android:textSize="14sp"
                                            android:drawablePadding="2dp"
                                            android:drawableStart="@drawable/ic_calendar"
                                            android:textColor="@color/white"/>
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:id="@+id/time3"
                                            android:text="10:24 AM"
                                            android:textSize="14sp"
                                            android:drawablePadding="2dp"
                                            android:drawableStart="@drawable/ic_time"
                                            android:layout_marginTop="3dp"
                                            android:textColor="@color/white"/>



                                    </LinearLayout>
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:textColor="#0B0B0B"
                                android:text="Remark: "/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#4A4A4A"
                                android:text="Education purpose only."/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>



</LinearLayout>