<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="480dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Company4">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="480dp"
        android:orientation="vertical"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="55dp"
            android:layout_gravity="center_horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="4dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="3dp">

                        <TextView
                            android:id="@+id/C1NameTXT"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Targets"
                            android:fontFamily="@font/red_hat_medium"
                            android:textColor="#202020"
                            android:textSize="26sp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/targetDate"
                            android:text="07/07/2021"
                            android:textSize="14sp"
                            android:paddingRight="148dp"
                            android:drawablePadding="2dp"
                            android:layout_marginTop="2dp"
                            android:drawableStart="@drawable/ic_calendar_grey"
                            android:textColor="#676767"/>
                    </LinearLayout>

                    <ImageView
                        android:layout_width="67dp"
                        android:layout_height="58dp"
                        android:src="@drawable/icon_tmp2"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="323dp"
                    android:layout_height="110dp"
                    android:orientation="horizontal"
                    android:layout_marginLeft="9dp"
                    android:layout_marginRight="9dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="4dp"
                    android:paddingEnd="2dp"
                    android:layout_gravity="center_horizontal">
                    <androidx.cardview.widget.CardView
                        android:layout_width="100dp"
                        android:layout_height="95dp"
                        app:cardCornerRadius="8dp"

                        android:layout_marginRight="10dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:background="@color/TargetsColor">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginRight="12dp"
                                android:layout_marginLeft="12dp"
                                android:layout_marginTop="10dp">
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_height="wrap_content">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Target 1"
                                        android:textSize="14sp"
                                        android:fontFamily="@font/red_hat_regular"
                                        android:textColor="#222222"/>

                                    <TextView
                                        android:id="@+id/C1T1TXT"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="1982"
                                        android:fontFamily="@font/red_hat_regular"
                                        android:textColor="@color/colorPrimary"
                                        android:textSize="18sp" />
                                </LinearLayout>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginRight="20dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="10dp"
                                android:orientation="vertical">

                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="100dp"
                        android:layout_height="95dp"
                        app:cardCornerRadius="8dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/TargetsColor"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="12dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="12dp"
                                android:orientation="horizontal">


                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Target 2"
                                        android:fontFamily="@font/red_hat_regular"
                                        android:textColor="#222222"
                                        android:textSize="14sp" />

                                    <TextView
                                        android:id="@+id/C1T2TXT"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="453"
                                        android:fontFamily="@font/red_hat_regular"
                                        android:textColor="@color/colorPrimaryDark"
                                        android:textSize="18sp" />
                                </LinearLayout>


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="20dp"
                                android:orientation="vertical">



                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="100dp"
                        android:layout_height="95dp"
                        app:cardCornerRadius="8dp"
                        android:paddingEnd="10dp"
                        android:layout_marginLeft="10dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:background="@color/TargetsColor">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginRight="12dp"
                                android:layout_marginLeft="12dp"
                                android:layout_marginTop="10dp">
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_height="wrap_content">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Stop Loss"
                                        android:fontFamily="@font/red_hat_regular"
                                        android:textSize="14sp"
                                        android:textColor="#222222"/>

                                    <TextView
                                        android:id="@+id/C1SlTXT"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/red_hat_regular"
                                        android:text="1952"
                                        android:textColor="@color/colorPrimaryDark"
                                        android:textSize="18sp" />
                                </LinearLayout>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginRight="20dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="10dp"
                                android:orientation="vertical">

                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="Remark: "
                        android:textColor="#101010"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#4A4A4A"
                        android:text="Education purpose only."/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>